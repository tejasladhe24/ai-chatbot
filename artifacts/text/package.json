{
  "name": "@artifacts/text-artifact",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "pnpm build:server && pnpm build:client",
    "build:server": "tsup --config tsup.server.config.ts",
    "build:client": "tsup --config tsup.client.config.ts",
    "clean": "rm -rf node_modules .turbo dist",
    "lint": "eslint . --max-warnings 0"
  },
  "dependencies": {
    "diff-match-patch": "^1.0.5",
    "orderedmap": "^2.1.1",
    "prosemirror-example-setup": "^1.2.3",
    "prosemirror-inputrules": "^1.5.1",
    "prosemirror-markdown": "^1.13.2",
    "prosemirror-model": "^1.25.4",
    "prosemirror-schema-basic": "^1.2.4",
    "prosemirror-schema-list": "^1.5.1",
    "prosemirror-state": "^1.4.4",
    "prosemirror-view": "^1.41.3",
    "streamdown": "^1.4.0"
  },
  "devDependencies": {
    "@configs/eslint-config": "workspace:*",
    "@configs/typescript-config": "workspace:*",
    "eslint": "^9.32.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@workspace/ai": "workspace:*",
    "@workspace/artifact": "workspace:0.0.1",
    "@workspace/database": "workspace:^0.0.1",
    "@workspace/di": "workspace:*",
    "@workspace/icons": "workspace:0.0.1",
    "@workspace/ui": "workspace:0.0.1",
    "framer-motion": "^12.23.24",
    "next-themes": "^0.4.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sonner": "^2.0.7",
    "usehooks-ts": "^3.1.1",
    "zod": "^3.25.76"
  },
  "exports": {
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.cjs"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js",
      "require": "./dist/client/index.cjs"
    }
  }
}
