# Always prefer local workspaces for dependencies
link-workspace-packages = true

# Keep workspace:* as-is (don’t replace with specific versions)
save-workspace-protocol = true

# Ensure workspace protocol resolves internally, not from registry
prefer-workspace-packages = true

# Safety: Don’t attempt to fetch workspace packages from the registry
workspace-protocol = true

# Optional: fallback registry just for external deps
registry = https://registry.npmjs.org/
